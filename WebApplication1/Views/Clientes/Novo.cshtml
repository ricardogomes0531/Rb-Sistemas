<div class="container">
    <main role="main" class="pb-3">
        <h2 class="text-primary fw-bold">Cadastro de Cliente</h2>
        <form name="formCliente">
            <!-- Nome -->
            <div class="mb-3">
                <label for="nomeCliente" class="form-label">Nome</label>
                <input type="text" id="nomeCliente" name="nomeCliente" class="form-control" placeholder="Nome completo" required>
            </div>

            <!-- Data de Nascimento -->
            <div class="mb-3">
                <label for="dataNascimento" class="form-label">Data de Nascimento</label>
                <input type="date" id="dataNascimento" name="dataNascimento" class="form-control" required>
            </div>

            <!-- E-mail -->
            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="email@exemplo.com" required>
            </div>

            <!-- DDD do Celular -->
            <div class="mb-3">
                <label for="dddCelular" class="form-label">DDD do Celular</label>
                <input type="text" id="dddCelular" name="dddCelular" class="form-control" placeholder="DDD" required>
            </div>

            <!-- Celular WhatsApp -->
            <div class="mb-3">
                <label for="celular" class="form-label">Celular (WhatsApp)</label>
                <input type="tel" id="celular" name="celular" class="form-control" placeholder="Número com WhatsApp" required>
            </div>

            <!-- Botão de Enviar -->
            <button type="button" onclick="salvarCliente()" class="btn btn-primary">Cadastrar Cliente</button>
        </form>
    </main>
</div>
<script src="~/js/cliente/cliente.js" asp-append-version="true"></script>
